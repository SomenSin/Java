import java.util.*;

class Tri{
 public static void pt(int n)
  {
  int c=1;
  for(int i=1;i<=n;i++)
  {
    for(int j=1;j<=i;j++)
	{
	 System.out.print(c+" ");
	 c++;
	}
	  System.out.println("");
  }
  
  }
  public static void main(String args[])
  {
	      Scanner in=new Scanner(System.in);
	  
       System.out.println("Enter no of times : ");
		 int q=in.nextInt();
	   pt(q);
  }
	 	  
  
  
 }
